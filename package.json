{
  "name": "iobroker.sg_webapi",
  "version": "0.0.1",
  "description": "NestJS Adapter for Rest API access to function not covered by the standard simple Api like sendTo",
  "author": {
    "name": "Swissglider",
    "email": "npm@mailschweiz.com"
  },
  "homepage": "https://github.com/swissglider/ioBroker.sg_webapi",
  "license": "MIT",
  "keywords": [
    "NestJS",
    "Swissglider",
    "Web",
    "API",
    "REST"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/swissglider/ioBroker.sg_webapi"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.0",
    "@nestjs/common": "^9.0.1",
    "@nestjs/core": "^9.0.1",
    "@nestjs/platform-express": "^9.0.1",
    "@nestjs/swagger": "^6.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.2",
    "@iobroker/adapter-dev": "^1.0.0",
    "@iobroker/testing": "^3.0.2",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.21",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.12",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.8.2",
    "typescript": "~4.5.5"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/swissglider/ioBroker.sg_webapi/issues"
  },
  "readmeFilename": "README.md"
}
